<% include partials/header %>



<div class='container'>

    <form action='/grocery-list?_method=PUT' method='POST'>
                    <br /><h3>My Menu:</h3>
                    <% menu.forEach(function(recipe,i) { %>
                      <div>
                      <%= i+1 %>
                      <input type="checkbox" aria-label="Checkbox for following text input" name='menu' value='<%= recipe._id %>'>
                      <label for='menu'><a href='<%= recipe.url %>'><%= recipe.name %></a></li></label>
                      </div>
                    <% }) %>
                    <br /><h3>My Grocery List:</h3>
                    <div class='form-group'>
                              
                              <span class="form-control form-control-sm" style='width: min-content; display: inline-block; background-color: transparent; border: none;'>
                                <i class="fa fa-trash" aria-hidden="true"></i>
                              </span>
                              <input type="textr"class="form-control form-control-sm" readonly value='Quantity' style='width: 15%; display: inline-block; background-color: transparent; border: none;'>
                              <input type="text"class="form-control form-control-sm" readonly value='Measurement' style='width: 15%; display: inline-block; background-color: transparent; border: none;'>
                              
                              <input type="text" readonly class="form-control form-control-sm" value='Name' style='width: 50%; display: inline-block; background-color: transparent; border: none;'>
                        </div>
                    <% groceryList.forEach(function(item, i) { %>
                        <div class='form-group'>
                              <input type='hidden' name='item[id]' value='<%= item._id %>'>
                              <span class="form-control form-control-sm" style='width: min-content; display: inline-block;'>
                                <input type='hidden' name='item[num]' value='off' />
                                <input type="checkbox" aria-label="Checkbox for following text input" name='item[num]' value='on'>
                              </span>
                              <input type="number" step="0.01" class="form-control form-control-sm" numeric aria-label="Text input with checkbox" required name='item[quantity]' value='<%= item.quantity %>' style='width: 15%; display: inline-block;'>
                              <select class='form-control form-control-sm ing-option' name='item[measurement]' style='width: 15%; display: inline-block;'>
                                <option <% if(item.measurement == '#'){ %> selected='selected' <% }; %> >#</option>
                                <option <% if(item.measurement == 'tsp'){ %> selected='selected' <% }; %> >tsp</option>
                                <option <% if(item.measurement == 'tbsp'){ %> selected='selected' <% }; %> >tbsp</option>
                                <option <% if(item.measurement == 'cup'){ %> selected='selected' <% }; %> >cup</option>
                                <option <% if(item.measurement == 'lb'){ %> selected='selected' <% }; %> >lb</option>
                                <option <% if(item.measurement == 'fl oz'){ %> selected='selected' <% }; %> >fl oz</option>
                                <option <% if(item.measurement == 'oz'){ %> selected='selected' <% }; %> >oz</option>
                              </select>
                              <input type="text" class="form-control form-control-sm" aria-label="Text input with checkbox" required name='item[name]' value='<%= item.name %>' style='width: 50%; display: inline-block;'>
                        </div>
                    <% }) %><br />
                    <button class='btn btn-md btn-success' type='submit'>Delete Selected/Update List</button>
                    <a href='/grocery-list-text' class='btn btn-md btn-success'>Switch to Store Mode</a>
                </form><br />
                
                
            <form action='/grocery-list' method='post'>
                <div class='form-group'>
                <h3 style='display: inline;'>Add List Items</h3>
                <a class='add-ingredient-button' onclick='addIngredient(this);'>+ ingredient</a>
                <div class='add-ingredient-form'>
                  <input required type='number' step="0.01" required name='ingredient[quantity]' placeholder='1' class='form-control form-control-sm ing-option' style='width: 10%; display: inline-block;'></input>
                  <select class='form-control form-control-sm ing-option' style='width: 15%; display: inline-block;' name='ingredient[measurement]'>
                    <option>#</option>
                    <option>tsp</option>
                    <option>tbsp</option>
                    <option>cup</option>
                    <option>lb</option>
                    <option>fl oz</option>
                  </select>
                  <input required type='text' required name='ingredient[name]' placeholder='Carrots' class='form-control form-control-sm ing-option' style='width: 60%; display: inline-block;'></input>
                  <a class='btn btn-md btn-danger delete-ingredient-button' onclick='deleteIngredient(this)' style='border: 0; padding: .25rem .5rem;'><i class="fa fa-minus" aria-hidden="true"></i></a>
                </div>
              </div>
                <button type='submit' class='btn btn-md btn-success'>Add Items</button>
          </form>
</div>

<% include partials/footer %>